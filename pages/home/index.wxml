<view class="page">
  <!-- 自定义导航栏 -->
  <Navbar showBackIcon="{{false}}" title="自助洗车">
    <view slot="left">
      <Icon url="../../assets/icons/user.png" bindtap="mine"></Icon>
    </view>
  </Navbar>
  <!-- 地图区域 -->
  <map setting="{{mapOptions}}" style="width: 100vw;height: 100vh;">
  </map>
  <!-- 定位按钮 -->
  <view class="location">
    <Icon url="/assets/icons/location-now.png" size="120rpx"></Icon>
  </view>
  <!-- 设备和洗车操作手册 -->
  <view class="action {{isAnimation? 'animation' : ''}}">
    <view class="bar"></view>
    <view class="inner">
      <view class="item device">
        <Icon url="/assets/icons/device.png" size="80rpx"></Icon>
        <text>设备操作手册</text>
      </view>
      <view class="item device">
        <Icon url="/assets/icons/car.png" size="80rpx"></Icon>
        <text>洗车操作手册</text>
      </view>
    </view>

  </view>
  <!-- 扫码按钮 -->
  <view class="scan">
    <view class="inner">
      <view class="button">
        <Icon url="/assets/icons/scan.png" size="42rpx" style="margin-right: 10rpx;"></Icon>
        <text>扫一扫自助洗车</text>
      </view>
      <view class="bg"></view>
    </view>
  </view>
</view>